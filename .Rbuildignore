# RStudio project & user files
^\.Rproj\.user$
^\.Rhistory$
^\.RData$
^\.Rapp\.history$

# Git
^\.git$
^\.gitignore$

# OS / editor cruft
^\.DS_Store$
Thumbs\.db

# Private or large folders
^_private($|/)
^_test($|/)

# Continuous integration configs
^\.github$

# Documentation artefacts (source files only)
^README\.Rmd$
^README-.*\.png$
^README_files$
^README\.html$

# Renviron / dev env
^\.Renviron$

# Packrat / renv
^packrat$
^renv$
^renv\.lock$

# Build
^build$
^.*\.Rproj$

# CRAN should not include pkgdown / GitHub Pages site
^doc$

# Exclude pkgdown metadata (if using pkgdown)
^pkgdown$

# Exclude site cache (optional)
^_pkgdown\.yml$
^docs$
^Meta$
